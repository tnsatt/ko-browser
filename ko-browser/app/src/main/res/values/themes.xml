<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.DayNight">
        <item name="android:textColorPrimary">@color/colorTextActive</item>
        <item name="android:editTextColor">@color/colorTextActive</item>
        <item name="android:textColorHint">@color/colorTextInactive</item>
        <item name="searchViewStyle">@style/AppTheme.SearchView</item>

        <!-- We need to set this because this error https://issuetracker.google.com/issues/37008551#comment5 -->
        <item name="homeAsUpIndicator">@drawable/ic_back</item>
    </style>
    <style name="Theme.Browser" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="FloatingTheme" parent="Theme.Browser">
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
<!--        <item name="android:gravity">center</item>-->
        <!--        <item name="android:windowNoTitle">true</item>-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
