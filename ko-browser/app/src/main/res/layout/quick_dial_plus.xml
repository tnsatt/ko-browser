<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingTop="@dimen/mostvisited_item_paddingTop"
    android:background="?android:attr/selectableItemBackgroundBorderless">

    <LinearLayout
        android:id="@+id/faviconViewParent"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mostvisisted_item_background"
        android:gravity="center"
        android:padding="@dimen/mostvisited_icon_padding">
        <ImageView
            android:id="@+id/faviconView"
            android:layout_width="@dimen/mostvisisited_icon_size"
            android:layout_height="@dimen/mostvisisited_icon_size"
            android:gravity="center"
            android:src="@drawable/ic_plus"/>
    </LinearLayout>

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/mostvisisited_title_font_size"
        android:textColor="@color/mostvisisited_text_color"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="center"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:text="@string/action_add"/>
</LinearLayout>